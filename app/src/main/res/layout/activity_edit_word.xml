<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditWordActivity">

    <!-- Word Edit Text -->
    <EditText
        android:id="@+id/editWordInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Word"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:padding="16dp" />

    <!-- Meaning Edit Text -->
    <EditText
        android:id="@+id/editMeaningInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Meaning"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/editWordInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:padding="16dp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:onClick="onSave"
        app:layout_constraintTop_toBottomOf="@id/editMeaningInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
